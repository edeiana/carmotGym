#!/bin/bash -e

THIS_PATH="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )" ;
CARMOT_HOME="${THIS_PATH}/.." ;

runSPEC="0" ;
if test -f ${CARMOT_HOME}/benchmarkSuites/SPEC2017.tar.gz ; then
  runSPEC="1" ;
fi

suffix="black" ;

function compileAndRunCARMOT {
  pushd . ;
  cd ${1} ;
  make ;
  source setup.sh ${CARMOT_HOME}/carmot ;

  ./compile NAS ;
  ./compile PARSEC3 ;
  if [ ${runSPEC} == "1" ] ; then
    ./compile SPEC2017 ;
  fi


  ./optimize NAS memorytool-all all ;
  if [ ${runSPEC} == "1" ] ; then
    ./optimize SPEC2017 memorytool-all all ;
  fi
  ./optimize PARSEC3 memorytool-all blackscholes ;
  ./optimize PARSEC3 memorytool-all canneal ;
  ./optimize PARSEC3 memorytool-all freqmine ;
  ./optimize PARSEC3 memorytool-all swaptions ;

  ./run NAS ${1}_${suffix} all ;
  ./run NAS ${1}_${suffix} all ; 
  if [ ${runSPEC} == "1" ] ; then
    ./run SPEC2017 ${1}_${suffix} all ;
  fi
  ./run PARSEC3 ${1}_${suffix} blackscholes ;
  ./run PARSEC3 ${1}_${suffix} canneal ;
  ./run PARSEC3 ${1}_${suffix} freqmine ;
  ./run PARSEC3 ${1}_${suffix} swaptions ;
  popd ;
}

prefixString="### CARMOT Gym: Fig7 black bars ###" ;
echo "${prefixString}" ;

cd ${CARMOT_HOME}/carmot ;
source clean.sh ;
source setup.sh ;
source setup_env.sh ;
./globalCompile_disable_pin_clustercallstack_O3_dfa_onlyread_directstate.sh ;
./pin_patch/pin_enable.sh ;

allSuitesDir="all_benchmark_suites" ;
cd ${CARMOT_HOME}/${allSuitesDir} ;

compileAndRunCARMOT "carmot_omp_overhead" ;

# Copy results
machine="`uname -n`"
resultFile="overhead_blackbars.txt" ;
./carmot_compute_speedup ${CARMOT_HOME}/${allSuitesDir}/carmot_omp_overhead/build/NAS/${machine}/carmot_omp_overhead_${suffix} ${CARMOT_HOME}/${allSuitesDir}/baseline_overhead/build/NAS/${machine}/baseline_overhead ${CARMOT_HOME}/results/current_machine/fig7/carmot/NAS/${resultFile} ;
./carmot_compute_speedup ${CARMOT_HOME}/${allSuitesDir}/carmot_omp_overhead/build/PARSEC3/${machine}/carmot_omp_overhead_${suffix} ${CARMOT_HOME}/${allSuitesDir}/baseline_overhead/build/PARSEC3/${machine}/baseline_overhead ${CARMOT_HOME}/results/current_machine/fig7/carmot/PARSEC3/${resultFile} ;
if [ ${runSPEC} == "1" ] ; then
  ./carmot_compute_speedup ${CARMOT_HOME}/${allSuitesDir}/carmot_omp_overhead/build/SPEC2017/${machine}/carmot_omp_overhead_${suffix} ${CARMOT_HOME}/${allSuitesDir}/baseline_overhead/build/SPEC2017/${machine}/baseline_overhead ${CARMOT_HOME}/results/current_machine/fig7/carmot/SPEC2017/${resultFile} ;
fi

